<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html=>{:class=>"form-signin"}) do |f| %>
  <h2 class="form-signin-heading">Sign up</h2>
  <%= devise_error_messages! %>

  <div><%= f.label :email, {class:"sr-only"} %>
       <%= f.email_field :email, {:autofocus => true, class:"form-control", placeholder:"Email Address"} %></div>

  <div><%= f.label :password, {class:"sr-only"} %>
       <%= f.password_field :password, {class:"form-control", placeholder:"Password"}%></div>

  <div><%= f.label :password_confirmation, {class:"sr-only"} %>
       <%= f.password_field :password_confirmation, {class:"form-control", placeholder:"Password Confirmation"} %></div>

  <div><%= f.submit "Sign up",{class:"btn btn-lg btn-primary btn-block"} %></div>
  <%= render "devise/shared/links" %>
<% end %>
